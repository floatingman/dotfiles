#!/usr/bin/env zsh

command -v vim >/dev/null 2>&1 && export EDITOR=vim
command -v nvim >/dev/null 2>&1 && export EDITOR=nvim

[ -d $HOME/.jenv/bin ] && export PATH=$PATH:$HOME/.jenv/bin
command -v jenv >/dev/null 2>&1 && eval "$(jenv init -)"
[ -d $HOME/.local/bin ] && export PATH=$PATH:$HOME/.local/bin
[ -d $HOME/.luarocks/bin ] && export PATH=$PATH:$HOME/.luarocks/bin
[ -f $HOME/.shell/aliases ] && source $HOME/.shell/aliases
[ -f $HOME/.shell/kubectl_aliases ] && source $HOME/.shell/kubectl_aliases
[ -f $HOME/.shell/funcs ] && source $HOME/.shell/funcs
[ -d $HOME/./shell/fzf-tab/ ] && source $HOME/.shell/fzf-tab/fzf-tab.plugin.zsh

export LF_ICONS="\
