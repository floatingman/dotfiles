# Read the Xresources file if it exists
[[ -f ~/.Xresources ]] && xrdb -merge ~/.Xresources

# Udiskie for mounting disks
udiskie &

# Restore the desktop background
if [ -f ~/.fehbg ]; then
    sh ~/.fehbg &
fi

# NetworkManager for managing networks
nm-applet &

# Blueman for bluetooth
blueman-applet &

# Launch the screen locker.
 xautolock -time 09 -locker "/usr/local/bin/lock" -detectsleep -secure -corners 0-00 -cornerdelay 3 -cornerredelay 20 &
# xautolock -time 10 -locker "if ! pidof physlock > /dev/null; then light -O ; light -S 10 ; physlock; light -I ; fi" -detectsleep -secure &

# Control volume with pasystray.
pasystray &

# Start screenshoot tool
flameshot &

# Notifications with dunst
dunst &

# Hide the cursor when idle
unclutter &

# Bind keys with sxhkd
sxhkd &

# Start Redshift to adjust colors
redswitch -g

# Set touchpad settings
touchpad_settings.sh &

# Start dropbox
dropbox &

# Start syncthing
syncthing &

# Start synergy
synergy &

# Load the best monitor profile available
autorandr --change --default mobile
